<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.flipbox.magang.fragment.AddOvertimeFragment">

    <RelativeLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/addOtDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_disabled"
            android:layout_marginBottom="7dp"
            android:text="Date"/>

        <EditText
            android:id="@+id/addOtDateForm"
            android:text="Default: today"
            android:layout_width="match_parent"
            android:layout_below="@id/addOtDateLabel"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:clickable="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/addOtDescLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addOtDateForm"
            android:textSize="12sp"
            android:textColor="@color/text_disabled"
            android:layout_marginBottom="7dp"
            android:text="Description"/>

        <EditText
            android:id="@+id/addOtDescForm"
            android:layout_width="match_parent"
            android:layout_below="@id/addOtDescLabel"
            android:hint="@string/add_desc"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/addOtTimeLabelHandler"
            android:layout_width="match_parent"
            android:layout_below="@id/addOtDescForm"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addOtStartLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_disabled"
                android:layout_weight="1"
                android:layout_marginBottom="7dp"
                android:text="Start"/>

            <TextView
                android:id="@+id/addOtEndLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_disabled"
                android:layout_weight="1"
                android:layout_marginBottom="7dp"
                android:text="End"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/addOtTimeFormHandler"
            android:layout_width="match_parent"
            android:layout_below="@id/addOtTimeLabelHandler"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/addOtStartForm"
                android:hint="@string/select_time"
                android:layout_width="fill_parent"
                android:textSize="16sp"
                android:textColor="@color/text_main"
                android:layout_weight="1"
                android:singleLine="true"
                android:focusable="false"
                android:clickable="true"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addOtEndForm"
                android:hint="@string/select_time"
                android:layout_width="fill_parent"
                android:textSize="16sp"
                android:textColor="@color/text_main"
                android:layout_weight="1"
                android:singleLine="true"
                android:focusable="false"
                android:clickable="true"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
