<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.flipbox.magang.fragment.TimesheetDailyFragment">

    <RelativeLayout
        android:id="@+id/tsdailyOverview"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:background="@color/primary400"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tsdailyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_marginBottom="4dp"
            android:text="January 1 1970"/>
        <TextView
            android:id="@+id/tsDailyDurationTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/tsdailyDate"
            android:textSize="16sp"
            android:textColor="@color/accent200"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:text="5h"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/tsdailyList"
        android:layout_below="@id/tsdailyOverview"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </ListView>

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tsdailyAdder"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:fab_stroke_visible="false"
        app:fab_colorNormal="@color/accent200"
        app:fab_colorPressed="@color/accent100"/>

</RelativeLayout>
